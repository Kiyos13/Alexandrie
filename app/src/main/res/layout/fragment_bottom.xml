<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BottomFragment"
    android:background="@color/first_dominant_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_fragment_height"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/menuImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu"
            app:tint="@color/background_color"/>

        <ImageView
            android:id="@+id/switchImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_switch_view"
            app:tint="@color/background_color" />

        <ImageView
            android:id="@+id/showcaseImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_showcase"
            app:tint="@color/background_color" />
    </LinearLayout>
</FrameLayout>