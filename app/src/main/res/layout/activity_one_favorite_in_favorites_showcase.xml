<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/favorite_recyclerView_margin_btw_favorites"
    tools:context=".OneFavoriteInFavoritesShowcaseActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/coverOneFavorite"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one_favorite_cover_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/demain" />

        <TextView
            android:id="@+id/titleFavoriteTxtV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/favorite_recyclerView_title_cover_margin"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/foreground_color"
            android:textSize="@dimen/title_font_size" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>