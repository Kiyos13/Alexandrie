<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    tools:context=".AppBarFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/first_dominant_color">

    <ImageView
        android:id="@+id/returnArrowImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_return_arrow"
        android:layout_marginLeft="@dimen/top_fragment_return_arrow_left_margin"
        android:layout_gravity="left|center_vertical"
        app:tint="@color/background_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Alexandrie"
        android:textColor="@color/background_color"
        android:textSize="@dimen/title_font_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/topBarFilterIconsLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/orderImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/top_fragment_icons_padding"
            android:src="@drawable/ic_order_down"
            app:tint="@color/background_color" />

        <ImageView
            android:id="@+id/filterImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/top_fragment_icons_padding"
            android:src="@drawable/ic_filter"
            app:tint="@color/background_color" />

        <ImageView
            android:id="@+id/searchImgV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/top_fragment_icons_right_margin"
            android:src="@android:drawable/ic_menu_search"
            app:tint="@color/background_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/editModeAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/top_fragment_edit_right_margin"
        android:text="Modifier"
        android:textColor="@color/background_color"
        android:textSize="@dimen/title_font_size"
        android:visibility="gone" />

</FrameLayout>